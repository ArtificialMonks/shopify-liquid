{%- comment -%}
  SVG Icon Snippet

  Renders inline SVG icons with accessibility support and
  customizable styling. Essential for Theme Store compliance.

  Parameters:
  - name: Icon name (required)
  - size: Icon size in pixels (optional, default: 24)
  - class: CSS class (optional)
  - aria_label: Accessibility label (optional)
  - aria_hidden: Hide from screen readers (optional, default: false)

  Usage:
  {% render 'icon-svg',
     name: 'cart',
     size: 20,
     class: 'cart-icon',
     aria_label: 'Shopping cart' %}
{%- endcomment -%}

{% liquid
# Parameter validation and defaults
  assign icon_name = name
  assign icon_size = size | default: 24
  assign css_class = class | default: 'icon'
  assign aria_label_text = aria_label
  assign hide_from_screen_readers = aria_hidden | default: false

  # Validate required parameters
  unless icon_name
    assign has_error = true
    assign error_message = 'Icon name is required'
  endunless
%}

{%- if has_error -%}
  <div class="icon-error" style="background: #ffe6e6; border: 1px solid #ff9999; padding: 4px 8px; border-radius: 4px; color: #cc0000; font-size: 12px;">
    Icon Error: {{ error_message }}
  </div>
{%- else -%}
  <svg
    class="{{ css_class }}"
    width="{{ icon_size }}"
    height="{{ icon_size }}"
    viewBox="0 0 24 24"
    fill="currentColor"
    {%- if hide_from_screen_readers %} aria-hidden="true"{% endif %}
    {%- if aria_label_text %} aria-label="{{ aria_label_text | escape }}"{% endif %}
    {%- unless aria_label_text or hide_from_screen_readers %} role="img"{% endunless %}
  >
