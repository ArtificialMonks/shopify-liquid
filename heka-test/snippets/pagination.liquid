{% comment %}
  Pagination snippet
  Renders pagination controls for paginated content
{% endcomment %}

{% if paginate.pages > 1 %}
  <nav class="pagination" role="navigation" aria-label="Pagination">
    <ul class="pagination__list">
      {% if paginate.previous %}
        <li class="pagination__item">
          <a href="{{ paginate.previous.url }}" class="pagination__link pagination__link--prev" aria-label="Previous page">
            <span aria-hidden="true">‹</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <li class="pagination__item">
            <a href="{{ part.url }}" class="pagination__link" aria-label="Page {{ part.title  | escape }}">
              {{ part.title }}
            </a>
          </li>
        {% else %}
          {% if part.title == paginate.current_page %}
            <li class="pagination__item">
              <span class="pagination__link pagination__link--current" aria-current="page" aria-label="Current page, page {{ part.title  | escape }}">
                {{ part.title }}
              </span>
            </li>
          {% else %}
            <li class="pagination__item">
              <span class="pagination__link pagination__link--gap">{{ part.title }}</span>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <li class="pagination__item">
          <a href="{{ paginate.next.url }}" class="pagination__link pagination__link--next" aria-label="Next page">
            <span aria-hidden="true">›</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      {% endif %}
    </ul>

    <div class="pagination__info">
      <span>{{ 'general.pagination.showing_items' | t: current: paginate.current_offset, total: paginate.items }}</span>
    </div>
  </nav>
{% endif %}

<style>
  .pagination {
    margin: 2rem 0;
    text-align: center;
  }

  .pagination__list {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .pagination__link {
    display: block;
    padding: 0.5rem 0.75rem;
    text-decoration: none;
    color: var(--color-text, #333);
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .pagination__link:hover {
    background: #f5f5f5;
    border-color: #999;
  }

  .pagination__link--current {
    background: var(--color-primary, #000);
    color: white;
    border-color: var(--color-primary, #000);
  }

  .pagination__link--gap {
    border: none;
    color: #999;
    cursor: default;
  }

  .pagination__link--gap:hover {
    background: none;
    border: none;
  }

  .pagination__info {
    margin-top: 1rem;
    color: #666;
    font-size: 0.875rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>