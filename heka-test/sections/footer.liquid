{%- comment -%}
  Footer Section - CLEAN & WORKING

  A simple, production-ready footer with:
  - Newsletter signup
  - Social media links
  - Navigation menus
  - Copyright text
  - Zero violations, zero complexity

  Replaces the broken footer.liquid with alert() dialogs
{%- endcomment -%}

{%- liquid
  assign newsletter_heading = section.settings.newsletter_heading
  assign newsletter_text = section.settings.newsletter_text
  assign show_social = section.settings.show_social
  assign copyright_text = section.settings.copyright_text
-%}

<style>
  .footer-{{ section.id }} {
    background-color: #f8f8f8;
    padding: 3rem 1rem 2rem;
    margin-top: 4rem;
  }

  .footer-{{ section.id }}__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-{{ section.id }}__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-{{ section.id }}__newsletter {
    grid-column: 1 / -1;
    text-align: center;
    margin-bottom: 2rem;
  }

  .footer-{{ section.id }}__newsletter h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .footer-{{ section.id }}__newsletter p {
    margin: 0 0 1rem 0;
    color: #666;
  }

  .footer-{{ section.id }}__newsletter-form {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .footer-{{ section.id }}__newsletter-input {
    flex: 1;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  .footer-{{ section.id }}__newsletter-button {
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .footer-{{ section.id }}__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-{{ section.id }}__menu-title {
    font-weight: bold;
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
  }

  .footer-{{ section.id }}__menu a {
    color: #666;
    text-decoration: none;
    line-height: 1.6;
  }

  .footer-{{ section.id }}__menu a:hover {
    color: #000;
  }

  .footer-{{ section.id }}__social {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin: 2rem 0;
  }

  .footer-{{ section.id }}__social a {
    color: #666;
    font-size: 1.5rem;
    text-decoration: none;
  }

  .footer-{{ section.id }}__social a:hover {
    color: #000;
  }

  .footer-{{ section.id }}__copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
    color: #666;
    font-size: 0.9rem;
  }

  @media screen and (max-width: 749px) {
    .footer-{{ section.id }}__newsletter-form {
      flex-direction: column;
    }

    .footer-{{ section.id }}__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
</style>

<footer class="footer-{{ section.id }}" {{ section.shopify_attributes }}>
  <div class="footer-{{ section.id }}__container">

    <!-- Newsletter -->
    {% if newsletter_heading != blank %}
      <div class="footer-{{ section.id }}__newsletter">
        <h3>{{ newsletter_heading | escape }}</h3>
        {% if newsletter_text != blank %}
          <p>{{ newsletter_text | escape }}</p>
        {% endif %}

        {% form 'customer' %}
          <div class="footer-{{ section.id }}__newsletter-form">
            <input type="email"
                   name="contact[email]"
                   placeholder="Enter your email"
                   class="footer-{{ section.id }}__newsletter-input"
                   required>
            <button type="submit" class="footer-{{ section.id }}__newsletter-button">
              Subscribe
            </button>
          </div>
        {% endform %}
      </div>
    {% endif %}

    <!-- Menu sections -->
    <div class="footer-{{ section.id }}__grid">
      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          {% assign menu = linklists[block.settings.menu] %}
          {% assign menu_title = block.settings.title %}

          {% if menu.links.size > 0 %}
            <div>
              {% if menu_title != blank %}
                <h4 class="footer-{{ section.id }}__menu-title">{{ menu_title | escape }}</h4>
              {% endif %}
              <ul class="footer-{{ section.id }}__menu">
                {% for link in menu.links %}
                  <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <!-- Social media -->
    {% if show_social %}
      <div class="footer-{{ section.id }}__social">
        {% assign facebook_link = settings.social_facebook_link %}
        {% assign instagram_link = settings.social_instagram_link %}
        {% assign twitter_link = settings.social_twitter_link %}

        {% if facebook_link != blank %}
          <a href="{{ facebook_link }}" target="_blank" rel="noopener">üìò</a>
        {% endif %}
        {% if instagram_link != blank %}
          <a href="{{ instagram_link }}" target="_blank" rel="noopener">üì∑</a>
        {% endif %}
        {% if twitter_link != blank %}
          <a href="{{ twitter_link }}" target="_blank" rel="noopener">üê¶</a>
        {% endif %}
      </div>
    {% endif %}

    <!-- Copyright -->
    <div class="footer-{{ section.id }}__copyright">
      {% if copyright_text != blank %}
        {{ copyright_text | escape }}
      {% else %}
        ¬© {{ 'now' | date: '%Y' }} {{ shop.name | escape }}. All rights reserved.
      {% endif %}
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Stay in the loop"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Subscribe to get updates on new products and offers"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media links",
      "default": true,
      "info": "Links are set in theme settings"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "info": "Leave blank for default copyright text"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "settings": {
        "newsletter_heading": "Stay in the loop",
        "newsletter_text": "Subscribe to get updates on new products and offers",
        "show_social": true
      },
      "blocks": [
        {
          "type": "menu",
          "settings": {
            "title": "Quick Links",
            "menu": "footer"
          }
        }
      ]
    }
  ]
}
{% endschema %}