<!-- Artist Showcase Section - Olympic-Level Architecture -->
{%- liquid
  assign unique = section.id | replace: '_', '' | downcase
  assign layout_style = section.settings.layout_style
  assign blocks_per_row = section.settings.blocks_per_row
  assign section_padding_top = section.settings.section_padding_top
  assign section_padding_bottom = section.settings.section_padding_bottom
  assign color_scheme = section.settings.color_scheme
  assign max_width = section.settings.max_width
  assign enable_animations = section.settings.enable_animations
  assign animation_delay = section.settings.animation_delay
-%}

<section
  id="artist-showcase-{{ unique }}"
  class="artist-showcase artist-showcase--{{ layout_style }} color-scheme-{{ color_scheme }}{% if enable_animations %} artist-showcase--animated{% endif %}"
  style="
    padding-top: {{ section_padding_top }}px;
    padding-bottom: {{ section_padding_bottom }}px;
    --blocks-per-row: {{ blocks_per_row }};
    --animation-delay: {{ animation_delay }}ms;
  "
  data-section-id="{{ section.id }}"
  data-section-type="artist-showcase"
  {% if section.settings.heading != blank %}aria-labelledby="artist-showcase-heading-{{ unique }}"{% endif %}
>
  {%- render 'artist-showcase-background', section: section, unique: unique -%}
  <div class="artist-showcase__container" style="max-width: {{ max_width }}px;">

    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="artist-showcase__header">
        {%- if section.settings.heading != blank -%}
          <h2
            id="artist-showcase-heading-{{ unique }}"
            class="artist-showcase__heading h2"
          >
            {{ section.settings.heading | escape }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="artist-showcase__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div
        class="artist-showcase__grid artist-showcase__grid--{{ layout_style }}"
        data-blocks-count="{{ section.blocks.size }}"
        data-blocks-per-row="{{ blocks_per_row }}"
      >
        {%- for block in section.blocks -%}
          {%- render 'artist-showcase-block',
              block: block,
              unique: unique,
              index: forloop.index,
              total: forloop.length,
              enable_animations: enable_animations -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="artist-showcase__empty">
        <p>Add showcase items to display your content.</p>
      </div>
    {%- endif -%}
  </div>
</section>

<script src="{{ 'artist-showcase.js' | asset_url }}" defer></script>

