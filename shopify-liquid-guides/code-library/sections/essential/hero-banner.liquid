{%- comment -%}
  Hero Banner Section - SIMPLE & WORKING

  A clean, production-ready hero banner with:
  - Background image with overlay
  - Heading and subheading text
  - Call-to-action button
  - Responsive design
  - Zero over-engineering

  All settings are properly defined in schema.
  Zero complexity violations.
  Production-ready for Shopify themes.
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity
  assign text_alignment = section.settings.text_alignment
  assign height = section.settings.height
-%}

<style>
  .hero-banner-{{ section.id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ height }}px;
    background-color: #f8f8f8;
    color: #ffffff;
    text-align: {{ text_alignment }};
    overflow: hidden;
  }

  {% if background_image != blank %}
    .hero-banner-{{ section.id }} {
      background-image: url({{ background_image | image_url: width: 1920 }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  {% endif %}

  .hero-banner-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .hero-banner-{{ section.id }}__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 2rem;
  }

  .hero-banner-{{ section.id }}__heading {
    font-size: 3rem;
    font-weight: bold;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .hero-banner-{{ section.id }}__subheading {
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }

  .hero-banner-{{ section.id }}__button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #ffffff;
    color: #000000;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .hero-banner-{{ section.id }}__button:hover {
    background-color: #f0f0f0;
    transform: translateY(-2px);
  }

  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .hero-banner-{{ section.id }} {
      min-height: {{ height | times: 0.7 }}px;
    }

    .hero-banner-{{ section.id }}__content {
      padding: 1rem;
    }

    .hero-banner-{{ section.id }}__heading {
      font-size: 2rem;
    }

    .hero-banner-{{ section.id }}__subheading {
      font-size: 1rem;
    }
  }
</style>

<section class="hero-banner-{{ section.id }}" {{ section.shopify_attributes }}>
  <div class="hero-banner-{{ section.id }}__content">

    {% if heading != blank %}
      <h1 class="hero-banner-{{ section.id }}__heading">
        {{ heading | escape }}
      </h1>
    {% endif %}

    {% if subheading != blank %}
      <p class="hero-banner-{{ section.id }}__subheading">
        {{ subheading | escape }}
      </p>
    {% endif %}

    {% if button_text != blank and button_url != blank %}
      <a href="{{ button_url }}" class="hero-banner-{{ section.id }}__button">
        {{ button_text | escape }}
      </a>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products at great prices"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 30
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "heading": "Welcome to our store",
        "subheading": "Discover amazing products at great prices",
        "button_text": "Shop now",
        "text_alignment": "center",
        "overlay_opacity": 30,
        "height": 500
      }
    }
  ]
}
{% endschema %}