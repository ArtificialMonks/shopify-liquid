{%- comment -%}
  Newsletter Section - CLEAN & WORKING

  Simple email signup with:
  - Clean form submission to Shopify
  - No console violations
  - Responsive design
  - Proper accessibility
  - GDPR consent option
  - Zero JavaScript complexity

  Perfect replacement for the 1040-line over-engineered monster with console.error violations
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign show_gdpr = section.settings.show_gdpr
  assign gdpr_text = section.settings.gdpr_text
-%}

<style>
  .newsletter-{{ section.id }} {
    padding: 3rem 1rem;
    background-color: {{ section.settings.background_color | default: '#f8f8f8' }};
    text-align: center;
  }

  .newsletter-{{ section.id }}__container {
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter-{{ section.id }}__heading {
    font-size: 2rem;
    font-weight: bold;
    margin: 0 0 1rem 0;
    color: {{ section.settings.text_color | default: '#333' }};
  }

  .newsletter-{{ section.id }}__description {
    color: #666;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .newsletter-{{ section.id }}__form {
    display: flex;
    gap: 0.5rem;
    max-width: 400px;
    margin: 0 auto 1rem;
  }

  .newsletter-{{ section.id }}__input {
    flex: 1;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .newsletter-{{ section.id }}__input:focus {
    outline: none;
    border-color: #007cba;
    box-shadow: 0 0 0 2px rgba(0, 124, 186, 0.1);
  }

  .newsletter-{{ section.id }}__button {
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
  }

  .newsletter-{{ section.id }}__button:hover {
    background-color: #333;
  }

  .newsletter-{{ section.id }}__gdpr {
    max-width: 400px;
    margin: 0 auto;
    text-align: left;
    font-size: 0.9rem;
    color: #666;
  }

  .newsletter-{{ section.id }}__gdpr label {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    cursor: pointer;
  }

  .newsletter-{{ section.id }}__gdpr input[type="checkbox"] {
    margin-top: 0.2rem;
  }

  .newsletter-{{ section.id }}__success,
  .newsletter-{{ section.id }}__error {
    padding: 1rem;
    margin-top: 1rem;
    border-radius: 4px;
    display: none;
  }

  .newsletter-{{ section.id }}__success {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
  }

  .newsletter-{{ section.id }}__error {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
  }

  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .newsletter-{{ section.id }}__form {
      flex-direction: column;
      max-width: 100%;
    }

    .newsletter-{{ section.id }}__button {
      width: 100%;
    }

    .newsletter-{{ section.id }}__heading {
      font-size: 1.75rem;
    }

    .newsletter-{{ section.id }} {
      padding: 2rem 1rem;
    }
  }
</style>

<section class="newsletter-{{ section.id }}" {{ section.shopify_attributes }}>
  <div class="newsletter-{{ section.id }}__container">

    {% if heading != blank %}
      <h2 class="newsletter-{{ section.id }}__heading">
        {{ heading | escape }}
      </h2>
    {% endif %}

    {% if description != blank %}
      <div class="newsletter-{{ section.id }}__description">
        {{ description }}
      </div>
    {% endif %}

    {% form 'customer' %}
      <input type="hidden" name="contact[tags]" value="newsletter">

      <div class="newsletter-{{ section.id }}__form">
        <input type="email"
               name="contact[email]"
               class="newsletter-{{ section.id }}__input"
               placeholder="{{ 'general.newsletter.email_placeholder' | t | default: 'Enter your email' }}"
               required
               autocomplete="email">

        <button type="submit" class="newsletter-{{ section.id }}__button">
          {{ button_text | escape }}
        </button>
      </div>

      {% if show_gdpr %}
        <div class="newsletter-{{ section.id }}__gdpr">
          <label>
            <input type="checkbox" name="contact[accepts_marketing]" required>
            <span>{{ gdpr_text | escape }}</span>
          </label>
        </div>
      {% endif %}

      {% if form.posted_successfully? %}
        <div class="newsletter-{{ section.id }}__success" style="display: block;">
          {{ section.settings.success_message | default: 'Thanks for subscribing!' | escape }}
        </div>
      {% elsif form.errors %}
        <div class="newsletter-{{ section.id }}__error" style="display: block;">
          {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] | escape }}
        </div>
      {% endif %}

    {% endform %}

  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay in the loop"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Subscribe to our newsletter for exclusive offers and updates.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing!"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "GDPR Compliance"
    },
    {
      "type": "checkbox",
      "id": "show_gdpr",
      "label": "Show GDPR consent checkbox",
      "default": false,
      "info": "Required in EU for marketing emails"
    },
    {
      "type": "text",
      "id": "gdpr_text",
      "label": "GDPR consent text",
      "default": "I agree to receive marketing emails and understand I can unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "settings": {
        "heading": "Stay in the loop",
        "description": "<p>Subscribe to our newsletter for exclusive offers and updates.</p>",
        "button_text": "Subscribe",
        "show_gdpr": false
      }
    }
  ]
}
{% endschema %}