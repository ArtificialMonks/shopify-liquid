{%- comment -%}
  Image with Text Section

  Highly versatile content section with flexible layout options,
  multiple content blocks, and comprehensive customization.
  The most commonly used section across Shopify themes.
{%- endcomment -%}

{%- liquid
  # Generate unique ID for CSS scoping
  assign unique = section.id | replace: '_', '' | downcase

  # Layout settings
  assign layout = section.settings.layout | default: 'image_first'
  assign content_alignment = section.settings.content_alignment | default: 'left'
  assign image_width = section.settings.image_width | default: 50
  assign content_width = 100 | minus: image_width
  assign image = section.settings.image
  assign mobile_layout = section.settings.mobile_layout | default: 'stacked'
-%}

{%- comment -%} CSS Scoping and Styles {%- endcomment -%}
{% style %}
  .image-with-text-{{ unique }} {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    color: {{ section.settings.text_color | default: '#333333' }};
    padding: {{ section.settings.padding_top | default: 60 }}px 0 {{ section.settings.padding_bottom | default: 60 }}px;
    contain: layout style;
    overflow: hidden;
  }

  .image-with-text-{{ unique }}__container {
    max-width: {{ section.settings.container_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.horizontal_padding | default: 20 }}px;
  }

  .image-with-text-{{ unique }}__inner {
    display: flex;
    align-items: {{ section.settings.vertical_alignment | default: 'center' }};
    gap: {{ section.settings.content_gap | default: 60 }}px;
    {% if layout == 'text_first' %}
      flex-direction: row-reverse;
    {% else %}
      flex-direction: row;
    {% endif %}
  }

  .image-with-text-{{ unique }}__image-wrapper {
    flex: 0 0 {{ image_width }}%;
    position: relative;
    border-radius: {{ section.settings.image_radius | default: 12 }}px;
    overflow: hidden;
    {% if section.settings.image_shadow %}
      box-shadow: {{ section.settings.image_shadow | default: '0 8px 30px rgba(0, 0, 0, 0.12)' }};
    {% endif %}
  }

  .image-with-text-{{ unique }}__image {
    position: relative;
    aspect-ratio: {{ section.settings.image_ratio | default: '4/3' }};
    background: {{ section.settings.image_background | default: '#f8f9fa' }};
    overflow: hidden;
  }

  .image-with-text-{{ unique }}__image img {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit | default: 'cover' }};
    transition: transform 0.3s ease;
  }

  .image-with-text-{{ unique }}__image:hover img {
    {% if section.settings.image_hover_effect %}
      transform: scale({{ section.settings.image_hover_scale | default: 1.05 }});
    {% endif %}
  }

  .image-with-text-{{ unique }}__image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      {{ section.settings.overlay_direction | default: 'to bottom' }},
      {{ section.settings.overlay_color_1 | default: 'rgba(0, 0, 0, 0)' }},
      {{ section.settings.overlay_color_2 | default: 'rgba(0, 0, 0, 0.3)' }}
    );
    opacity: {{ section.settings.overlay_opacity | default: 0 | divided_by: 100.0 }};
    pointer-events: none;
  }

  .image-with-text-{{ unique }}__content {
    flex: 0 0 {{ content_width }}%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    {% if content_alignment == 'center' %}
      text-align: center;
      align-items: center;
    {% elsif content_alignment == 'right' %}
      text-align: right;
      align-items: flex-end;
    {% else %}
      text-align: left;
      align-items: flex-start;
    {% endif %}
  }

  .image-with-text-{{ unique }}__content-inner {
    max-width: {{ section.settings.content_max_width | default: 600 }}px;
    width: 100%;
  }

  .image-with-text-{{ unique }}__blocks {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.block_spacing | default: 24 }}px;
  }

  .image-with-text-{{ unique }}__block {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }

  .image-with-text-{{ unique }}__block:nth-child(1) { animation-delay: 0.1s; }
  .image-with-text-{{ unique }}__block:nth-child(2) { animation-delay: 0.2s; }
  .image-with-text-{{ unique }}__block:nth-child(3) { animation-delay: 0.3s; }
  .image-with-text-{{ unique }}__block:nth-child(4) { animation-delay: 0.4s; }
  .image-with-text-{{ unique }}__block:nth-child(5) { animation-delay: 0.5s; }

  .image-with-text-{{ unique }}__heading {
    font-size: {{ section.settings.heading_size | default: 32 }}px;
    font-weight: {{ section.settings.heading_weight | default: 700 }};
    color: {{ section.settings.heading_color | default: '#333333' }};
    line-height: {{ section.settings.heading_line_height | default: 1.2 }};
    margin: 0;
    letter-spacing: {{ section.settings.heading_letter_spacing | default: '-0.01em' }};
  }

  .image-with-text-{{ unique }}__subheading {
    font-size: {{ section.settings.subheading_size | default: 14 }}px;
    font-weight: {{ section.settings.subheading_weight | default: 600 }};
    color: {{ section.settings.subheading_color | default: '#007cba' }};
    text-transform: {{ section.settings.subheading_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.subheading_letter_spacing | default: '0.1em' }};
    margin: 0;
    line-height: 1.4;
  }

  .image-with-text-{{ unique }}__text {
    font-size: {{ section.settings.text_size | default: 16 }}px;
    color: {{ section.settings.text_color | default: '#666666' }};
    line-height: {{ section.settings.text_line_height | default: 1.6 }};
    margin: 0;
  }

  .image-with-text-{{ unique }}__text p {
    margin: 0 0 1em 0;
  }

  .image-with-text-{{ unique }}__text p:last-child {
    margin-bottom: 0;
  }

  .image-with-text-{{ unique }}__buttons {
    display: flex;
    gap: {{ section.settings.button_spacing | default: 16 }}px;
    flex-wrap: wrap;
    {% if content_alignment == 'center' %}
      justify-content: center;
    {% elsif content_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .image-with-text-{{ unique }}__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding | default: '14px 28px' }};
    font-size: {{ section.settings.button_size | default: 16 }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ section.settings.button_radius | default: 6 }}px;
    transition: all 0.3s ease;
    min-height: 50px;
    min-width: 50px;
    border: 2px solid transparent;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .image-with-text-{{ unique }}__button--primary {
    background: {{ section.settings.primary_button_bg | default: '#007cba' }};
    color: {{ section.settings.primary_button_color | default: '#ffffff' }};
    border-color: {{ section.settings.primary_button_bg | default: '#007cba' }};
  }

  .image-with-text-{{ unique }}__button--primary:hover {
    background: {{ section.settings.primary_button_hover | default: '#005a9e' }};
    border-color: {{ section.settings.primary_button_hover | default: '#005a9e' }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 124, 186, 0.3);
  }

  .image-with-text-{{ unique }}__button--secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_color | default: '#333333' }};
    border-color: {{ section.settings.secondary_button_color | default: '#333333' }};
  }

  .image-with-text-{{ unique }}__button--secondary:hover {
    background: {{ section.settings.secondary_button_color | default: '#333333' }};
    color: {{ section.settings.secondary_button_hover_color | default: '#ffffff' }};
  }

  .image-with-text-{{ unique }}__button:focus {
    outline: 2px solid {{ section.settings.focus_color | default: '#007cba' }};
    outline-offset: 2px;
  }

  .image-with-text-{{ unique }}__button-icon {
    width: 18px;
    height: 18px;
    margin-left: 8px;
    transition: transform 0.3s ease;
  }

  .image-with-text-{{ unique }}__button:hover .image-with-text-{{ unique }}__button-icon {
    transform: translateX(4px);
  }

  .image-with-text-{{ unique }}__features {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.features_gap | default: 16 }}px;
  }

  .image-with-text-{{ unique }}__feature {
    display: flex;
    align-items: center;
    gap: {{ section.settings.feature_icon_gap | default: 12 }}px;
    font-size: {{ section.settings.feature_text_size | default: 14 }}px;
    color: {{ section.settings.feature_text_color | default: '#666666' }};
    line-height: 1.4;
  }

  .image-with-text-{{ unique }}__feature-icon {
    width: {{ section.settings.feature_icon_size | default: 20 }}px;
    height: {{ section.settings.feature_icon_size | default: 20 }}px;
    color: {{ section.settings.feature_icon_color | default: '#28a745' }};
    flex-shrink: 0;
  }

  .image-with-text-{{ unique }}__video-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: {{ section.settings.video_button_size | default: 80 }}px;
    height: {{ section.settings.video_button_size | default: 80 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  .image-with-text-{{ unique }}__video-button:hover {
    transform: translate(-50%, -50%) scale(1.1);
    background: rgba(255, 255, 255, 1);
  }

  .image-with-text-{{ unique }}__video-button svg {
    width: 30px;
    height: 30px;
    color: {{ section.settings.video_button_color | default: '#007cba' }};
    margin-left: 4px;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 989px) {
    .image-with-text-{{ unique }}__inner {
      {% if mobile_layout == 'stacked' %}
        flex-direction: column;
      {% else %}
        gap: {{ section.settings.content_gap_tablet | default: 40 }}px;
      {% endif %}
    }

    .image-with-text-{{ unique }}__image-wrapper,
    .image-with-text-{{ unique }}__content {
      {% if mobile_layout == 'stacked' %}
        flex: none;
        width: 100%;
      {% endif %}
    }

    .image-with-text-{{ unique }}__container {
      padding: 0 {{ section.settings.horizontal_padding_tablet | default: 16 }}px;
    }

    .image-with-text-{{ unique }}__heading {
      font-size: {{ section.settings.heading_size_tablet | default: 28 }}px;
    }

    .image-with-text-{{ unique }}__buttons {
      flex-direction: column;
      align-items: stretch;
    }
  }

  @media screen and (max-width: 749px) {
    .image-with-text-{{ unique }} {
      padding: {{ section.settings.padding_top_mobile | default: 40 }}px 0 {{ section.settings.padding_bottom_mobile | default: 40 }}px;
    }

    .image-with-text-{{ unique }}__inner {
      flex-direction: column;
      gap: {{ section.settings.content_gap_mobile | default: 30 }}px;
      {% if mobile_layout == 'image_last' %}
        flex-direction: column-reverse;
      {% endif %}
    }

    .image-with-text-{{ unique }}__image-wrapper,
    .image-with-text-{{ unique }}__content {
      flex: none;
      width: 100%;
    }

    .image-with-text-{{ unique }}__container {
      padding: 0 {{ section.settings.horizontal_padding_mobile | default: 16 }}px;
    }

    .image-with-text-{{ unique }}__content {
      text-align: center;
      align-items: center;
    }

    .image-with-text-{{ unique }}__buttons {
      justify-content: center;
    }

    .image-with-text-{{ unique }}__heading {
      font-size: {{ section.settings.heading_size_mobile | default: 24 }}px;
    }

    .image-with-text-{{ unique }}__text {
      font-size: {{ section.settings.text_size_mobile | default: 14 }}px;
    }

    .image-with-text-{{ unique }}__blocks {
      gap: {{ section.settings.block_spacing_mobile | default: 20 }}px;
    }

    .image-with-text-{{ unique }}__video-button {
      width: {{ section.settings.video_button_size_mobile | default: 60 }}px;
      height: {{ section.settings.video_button_size_mobile | default: 60 }}px;
    }

    .image-with-text-{{ unique }}__video-button svg {
      width: 24px;
      height: 24px;
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .image-with-text-{{ unique }}__block {
      animation: none;
    }

    .image-with-text-{{ unique }}__image img {
      transition: none;
    }

    .image-with-text-{{ unique }}__image:hover img {
      transform: none;
    }

    .image-with-text-{{ unique }}__button {
      transition: none;
    }

    .image-with-text-{{ unique }}__button:hover {
      transform: none;
      box-shadow: none;
    }

    .image-with-text-{{ unique }}__button:hover .image-with-text-{{ unique }}__button-icon {
      transform: none;
    }

    .image-with-text-{{ unique }}__video-button {
      transition: none;
    }

    .image-with-text-{{ unique }}__video-button:hover {
      transform: translate(-50%, -50%);
    }
  }
{% endstyle %}

{%- comment -%} HTML Structure {%- endcomment -%}
<section class="image-with-text-{{ unique }}">
  <div class="image-with-text-{{ unique }}__container">
    <div class="image-with-text-{{ unique }}__inner">
      {%- comment -%} Image Side {%- endcomment -%}
      <div class="image-with-text-{{ unique }}__image-wrapper">
        <div class="image-with-text-{{ unique }}__image">
          {%- if image -%}
            {% render 'responsive-image',
               image: image,
               alt: section.settings.image_alt | default: image.alt,
               sizes: '(min-width: 990px) 600px, (min-width: 750px) 450px, 100vw',
               loading: 'lazy',
               max_width: 800 %}
          {%- else -%}
            <div style="background: #f8f9fa; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #666;">
              <span>Image placeholder</span>
            </div>
          {%- endif -%}

          {%- if section.settings.show_overlay -%}
            <div class="image-with-text-{{ unique }}__image-overlay"></div>
          {%- endif -%}

          {%- if section.settings.video_url != blank -%}
            <button
              class="image-with-text-{{ unique }}__video-button"
              aria-label="Play video"
              data-video-url="{{ section.settings.video_url | escape }}"
            >
              {% render 'icon-svg', name: 'play', size: 30, aria_hidden: true %}
            </button>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Content Side {%- endcomment -%}
      <div class="image-with-text-{{ unique }}__content">
        <div class="image-with-text-{{ unique }}__content-inner">
          <div class="image-with-text-{{ unique }}__blocks">
            {%- for block in section.blocks -%}
              <div class="image-with-text-{{ unique }}__block" {{ block.shopify_attributes }}>
                {%- case block.type -%}
                  {%- when 'subheading' -%}
                    {%- if block.settings.text != blank -%}
                      <div class="image-with-text-{{ unique }}__subheading">
                        {{ block.settings.text | escape }}
                      </div>
                    {%- endif -%}

                  {%- when 'heading' -%}
                    {%- if block.settings.text != blank -%}
                      <h2 class="image-with-text-{{ unique }}__heading">
                        {{ block.settings.text | escape }}
                      </h2>
                    {%- endif -%}

                  {%- when 'text' -%}
                    {%- if block.settings.content != blank -%}
                      <div class="image-with-text-{{ unique }}__text">
                        {{ block.settings.content }}
                      </div>
                    {%- endif -%}

                  {%- when 'button_group' -%}
                    <div class="image-with-text-{{ unique }}__buttons">
                      {%- if block.settings.button_text_1 != blank and block.settings.button_url_1 != blank -%}
                        <a
                          href="{{ block.settings.button_url_1 }}"
                          class="image-with-text-{{ unique }}__button image-with-text-{{ unique }}__button--primary"
                          {% if block.settings.button_url_1 contains 'http' %}target="_blank" rel="noopener"{% endif %}
                        >
                          {{ block.settings.button_text_1 | escape }}
                          {%- if block.settings.show_arrow_1 -%}
                            {% render 'icon-svg',
                               name: 'arrow-right',
                               size: 18,
                               class: 'image-with-text-' | append: unique | append: '__button-icon',
                               aria_hidden: true %}
                          {%- endif -%}
                        </a>
                      {%- endif -%}

                      {%- if block.settings.button_text_2 != blank and block.settings.button_url_2 != blank -%}
                        <a
                          href="{{ block.settings.button_url_2 }}"
                          class="image-with-text-{{ unique }}__button image-with-text-{{ unique }}__button--secondary"
                          {% if block.settings.button_url_2 contains 'http' %}target="_blank" rel="noopener"{% endif %}
                        >
                          {{ block.settings.button_text_2 | escape }}
                          {%- if block.settings.show_arrow_2 -%}
                            {% render 'icon-svg',
                               name: 'arrow-right',
                               size: 18,
                               class: 'image-with-text-' | append: unique | append: '__button-icon',
                               aria_hidden: true %}
                          {%- endif -%}
                        </a>
                      {%- endif -%}
                    </div>

                  {%- when 'features' -%}
                    {%- if block.settings.feature_1 != blank or block.settings.feature_2 != blank or block.settings.feature_3 != blank -%}
                      <div class="image-with-text-{{ unique }}__features">
                        {%- if block.settings.feature_1 != blank -%}
                          <div class="image-with-text-{{ unique }}__feature">
                            {% render 'icon-svg',
                               name: block.settings.feature_icon_1 | default: 'check',
                               size: 20,
                               class: 'image-with-text-' | append: unique | append: '__feature-icon',
                               aria_hidden: true %}
                            <span>{{ block.settings.feature_1 | escape }}</span>
                          </div>
                        {%- endif -%}

                        {%- if block.settings.feature_2 != blank -%}
                          <div class="image-with-text-{{ unique }}__feature">
                            {% render 'icon-svg',
                               name: block.settings.feature_icon_2 | default: 'check',
                               size: 20,
                               class: 'image-with-text-' | append: unique | append: '__feature-icon',
                               aria_hidden: true %}
                            <span>{{ block.settings.feature_2 | escape }}</span>
                          </div>
                        {%- endif -%}

                        {%- if block.settings.feature_3 != blank -%}
                          <div class="image-with-text-{{ unique }}__feature">
                            {% render 'icon-svg',
                               name: block.settings.feature_icon_3 | default: 'check',
                               size: 20,
                               class: 'image-with-text-' | append: unique | append: '__feature-icon',
                               aria_hidden: true %}
                            <span>{{ block.settings.feature_3 | escape }}</span>
                          </div>
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

