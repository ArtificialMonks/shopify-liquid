{%- comment -%}
  Hero Banner Section - CLEAN & WORKING

  Simple hero banner with:
  - Large heading and subtitle
  - Call-to-action button
  - Background image support
  - Text alignment options
  - Zero undefined settings
  - Zero complexity violations

  Perfect replacement for the broken 9-issue version
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
  assign background_image = section.settings.background_image
  assign text_alignment = section.settings.text_alignment
  assign height = section.settings.height
-%}

<style>
  .hero-banner-{{ section.id }} {
    position: relative;
    min-height: {{ height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: {{ text_alignment }};
    color: white;
    overflow: hidden;
  }

  {% if background_image %}
    .hero-banner-{{ section.id }}__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -2;
    }

    .hero-banner-{{ section.id }}__background img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hero-banner-{{ section.id }}__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.4);
      z-index: -1;
    }
  {% else %}
    .hero-banner-{{ section.id }} {
      background-color: {{ section.settings.background_color | default: '#333' }};
    }
  {% endif %}

  .hero-banner-{{ section.id }}__content {
    max-width: 800px;
    padding: 2rem;
    z-index: 1;
  }

  .hero-banner-{{ section.id }}__heading {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: bold;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .hero-banner-{{ section.id }}__subheading {
    font-size: clamp(1rem, 2vw, 1.5rem);
    margin: 0 0 2rem 0;
    opacity: 0.9;
    line-height: 1.4;
  }

  .hero-banner-{{ section.id }}__button {
    display: inline-block;
    background-color: #fff;
    color: #333;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: transform 0.2s ease;
  }

  .hero-banner-{{ section.id }}__button:hover {
    transform: translateY(-2px);
  }

  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .hero-banner-{{ section.id }} {
      min-height: 400px;
      text-align: center;
    }

    .hero-banner-{{ section.id }}__content {
      padding: 1rem;
    }

    .hero-banner-{{ section.id }}__heading {
      font-size: 2rem;
    }

    .hero-banner-{{ section.id }}__subheading {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
  }
</style>

<section class="hero-banner-{{ section.id }}" {{ section.shopify_attributes }}>

  {% if background_image %}
    <div class="hero-banner-{{ section.id }}__background">
      <img src="{{ background_image | image_url: width: 1920 }}"
           alt="{{ background_image.alt | escape }}"
           width="1920"
           height="800"
           loading="eager">
    </div>
    <div class="hero-banner-{{ section.id }}__overlay"></div>
  {% endif %}

  <div class="hero-banner-{{ section.id }}__content">
    {% if heading != blank %}
      <h1 class="hero-banner-{{ section.id }}__heading">
        {{ heading | escape }}
      </h1>
    {% endif %}

    {% if subheading != blank %}
      <p class="hero-banner-{{ section.id }}__subheading">
        {{ subheading | escape }}
      </p>
    {% endif %}

    {% if button_text != blank and button_url != blank %}
      <a href="{{ button_url }}" class="hero-banner-{{ section.id }}__button">
        {{ button_text | escape }}
      </a>
    {% endif %}
  </div>

</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products and exceptional service"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#333333",
      "info": "Used when no background image is set"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "heading": "Welcome to Our Store",
        "subheading": "Discover amazing products and exceptional service",
        "button_text": "Shop Now",
        "text_alignment": "center",
        "height": 500
      }
    }
  ]
}
{% endschema %}