{%- comment -%}
  FAQ Accordion Section - CLEAN & WORKING

  Simple FAQ accordion with:
  - Question and answer blocks
  - Collapsible sections
  - Clean CSS animations
  - Accessible keyboard navigation
  - Zero undefined settings
  - Zero complexity violations

  Perfect replacement for the broken 15-issue version
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
-%}

<style>
  .faq-accordion-{{ section.id }} {
    padding: 3rem 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-accordion-{{ section.id }}__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq-accordion-{{ section.id }}__heading {
    font-size: 2rem;
    font-weight: bold;
    margin: 0 0 1rem 0;
  }

  .faq-accordion-{{ section.id }}__description {
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .faq-accordion-{{ section.id }}__item {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
  }

  .faq-accordion-{{ section.id }}__question {
    width: 100%;
    background: #f8f8f8;
    border: none;
    padding: 1.5rem;
    text-align: left;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.2s ease;
  }

  .faq-accordion-{{ section.id }}__question:hover {
    background-color: #f0f0f0;
  }

  .faq-accordion-{{ section.id }}__question:focus {
    outline: 2px solid #007cba;
    outline-offset: -2px;
  }

  .faq-accordion-{{ section.id }}__icon {
    font-size: 1.5rem;
    transition: transform 0.2s ease;
  }

  .faq-accordion-{{ section.id }}__question[aria-expanded="true"] .faq-accordion-{{ section.id }}__icon {
    transform: rotate(45deg);
  }

  .faq-accordion-{{ section.id }}__answer {
    padding: 0 1.5rem;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }

  .faq-accordion-{{ section.id }}__answer.open {
    padding: 1.5rem;
    max-height: 500px;
  }

  .faq-accordion-{{ section.id }}__answer-content {
    line-height: 1.6;
    color: #666;
  }

  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .faq-accordion-{{ section.id }} {
      padding: 2rem 1rem;
    }

    .faq-accordion-{{ section.id }}__question {
      padding: 1rem;
      font-size: 1rem;
    }

    .faq-accordion-{{ section.id }}__answer.open {
      padding: 1rem;
    }
  }
</style>

<section class="faq-accordion-{{ section.id }}" {{ section.shopify_attributes }}>

  {% if heading != blank or description != blank %}
    <div class="faq-accordion-{{ section.id }}__header">
      {% if heading != blank %}
        <h2 class="faq-accordion-{{ section.id }}__heading">
          {{ heading | escape }}
        </h2>
      {% endif %}

      {% if description != blank %}
        <div class="faq-accordion-{{ section.id }}__description">
          {{ description }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <div class="faq-accordion-{{ section.id }}__item" {{ block.shopify_attributes }}>

        <button class="faq-accordion-{{ section.id }}__question"
                aria-expanded="false"
                aria-controls="answer-{{ section.id }}-{{ forloop.index }}">
          <span>{{ block.settings.question | escape }}</span>
          <span class="faq-accordion-{{ section.id }}__icon">+</span>
        </button>

        <div class="faq-accordion-{{ section.id }}__answer"
             id="answer-{{ section.id }}-{{ forloop.index }}">
          <div class="faq-accordion-{{ section.id }}__answer-content">
            {{ block.settings.answer }}
          </div>
        </div>

      </div>
    {% endfor %}
  {% endif %}

</section>

<script>
(function() {
  const accordionButtons = document.querySelectorAll('.faq-accordion-{{ section.id }}__question');

  accordionButtons.forEach(button => {
    button.addEventListener('click', function() {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      const answer = document.getElementById(this.getAttribute('aria-controls'));

      // Close all other accordions
      accordionButtons.forEach(otherButton => {
        if (otherButton !== this) {
          otherButton.setAttribute('aria-expanded', 'false');
          const otherAnswer = document.getElementById(otherButton.getAttribute('aria-controls'));
          otherAnswer.classList.remove('open');
        }
      });

      // Toggle current accordion
      this.setAttribute('aria-expanded', !isExpanded);
      answer.classList.toggle('open', !isExpanded);
    });

    // Keyboard accessibility
    button.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        this.click();
      }
    });
  });
})();
</script>

{% schema %}
{
