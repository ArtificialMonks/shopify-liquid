{%- comment -%}
  Featured Products Section

  Displays a curated selection of products with responsive grid layout,
  proper performance optimization, and accessibility support.
{%- endcomment -%}

{%- liquid
  # Generate unique ID for CSS scoping
  assign unique = section.id | replace: '_', '' | downcase

  # Section settings
  assign collection = collections[section.settings.collection] | default: collections.all
  assign products_to_show = section.settings.products_to_show | default: 8
  assign columns_desktop = section.settings.columns_desktop | default: 4
  assign columns_tablet = section.settings.columns_tablet | default: 2
  assign columns_mobile = section.settings.columns_mobile | default: 1

  # Get products
  assign featured_products = collections[section.settings.featured_collection].products | slice: 0, products_to_show
-%}

{%- comment -%} CSS Scoping and Styles {%- endcomment -%}
{% style %}
  .featured-products-{{ unique }} {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.padding_top | default: 60 }}px 0 {{ section.settings.padding_bottom | default: 60 }}px;
    contain: layout style;
  }

  .featured-products-{{ unique }}__container {
    max-width: {{ section.settings.container_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .featured-products-{{ unique }}__header {
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    margin-bottom: {{ section.settings.header_margin | default: 50 }}px;
    max-width: {{ section.settings.header_width | default: 600 }}px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .featured-products-{{ unique }}__title {
    font-size: {{ section.settings.title_size | default: 36 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    color: {{ section.settings.title_color | default: '#333333' }};
    margin: 0 0 {{ section.settings.title_margin | default: 16 }}px 0;
    line-height: 1.2;
  }

  .featured-products-{{ unique }}__description {
    font-size: {{ section.settings.description_size | default: 18 }}px;
    color: {{ section.settings.description_color | default: '#666666' }};
    line-height: 1.6;
    margin: 0;
  }

  .featured-products-{{ unique }}__grid {
    display: grid;
    grid-template-columns: repeat({{ columns_mobile }}, 1fr);
    gap: {{ section.settings.grid_gap | default: 30 }}px;
    margin-bottom: {{ section.settings.button_margin | default: 40 }}px;
  }

  .featured-products-{{ unique }}__product {
    display: flex;
    flex-direction: column;
    background: {{ section.settings.card_background | default: '#ffffff' }};
    border-radius: {{ section.settings.card_radius | default: 8 }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ section.settings.card_border_width | default: 1 }}px solid {{ section.settings.card_border_color | default: '#e5e5e5' }};
    contain: layout style;
    will-change: transform;
  }

  .featured-products-{{ unique }}__product:hover {
    transform: translateY(-{{ section.settings.hover_lift | default: 4 }}px);
    box-shadow: 0 {{ section.settings.shadow_blur | default: 20 }}px {{ section.settings.shadow_spread | default: 40 }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity | default: 10 | divided_by: 100.0 }});
  }

  .featured-products-{{ unique }}__product-image {
    position: relative;
    aspect-ratio: {{ section.settings.image_ratio | default: '1' }};
    overflow: hidden;
    background: {{ section.settings.image_background | default: '#f8f9fa' }};
  }

  .featured-products-{{ unique }}__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-products-{{ unique }}__product:hover .featured-products-{{ unique }}__product-image img {
    transform: scale({{ section.settings.image_scale | default: 1.05 }});
  }

  .featured-products-{{ unique }}__product-info {
    padding: {{ section.settings.card_padding | default: '20px' }};
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .featured-products-{{ unique }}__product-title {
    font-size: {{ section.settings.product_title_size | default: 16 }}px;
    font-weight: {{ section.settings.product_title_weight | default: 600 }};
    color: {{ section.settings.product_title_color | default: '#333333' }};
    margin: 0 0 {{ section.settings.product_title_margin | default: 8 }}px 0;
    line-height: 1.3;
    text-decoration: none;
  }

  .featured-products-{{ unique }}__product-title:hover {
    color: {{ section.settings.title_hover_color | default: '#007cba' }};
  }

  .featured-products-{{ unique }}__product-price {
    margin-top: auto;
    font-size: {{ section.settings.price_size | default: 18 }}px;
    font-weight: {{ section.settings.price_weight | default: 700 }};
  }

  .featured-products-{{ unique }}__price-current {
    color: {{ section.settings.price_color | default: '#007cba' }};
  }

  .featured-products-{{ unique }}__price-compare {
    color: {{ section.settings.compare_price_color | default: '#999999' }};
    text-decoration: line-through;
    font-size: 0.9em;
    margin-left: 8px;
  }

  .featured-products-{{ unique }}__price-badge {
    background: {{ section.settings.sale_badge_bg | default: '#e74c3c' }};
    color: {{ section.settings.sale_badge_color | default: '#ffffff' }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    margin-left: 8px;
  }

  .featured-products-{{ unique }}__view-all {
    text-align: {{ section.settings.text_alignment | default: 'center' }};
  }

  .featured-products-{{ unique }}__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding | default: '14px 28px' }};
    font-size: {{ section.settings.button_size | default: 16 }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ section.settings.button_radius | default: 6 }}px;
    transition: all 0.3s ease;
    min-height: 44px;
    min-width: 44px;
    background: {{ section.settings.button_bg | default: '#007cba' }};
    color: {{ section.settings.button_color | default: '#ffffff' }};
    border: 2px solid {{ section.settings.button_bg | default: '#007cba' }};
  }

  .featured-products-{{ unique }}__button:hover {
    background: {{ section.settings.button_hover_bg | default: '#005a9e' }};
    border-color: {{ section.settings.button_hover_bg | default: '#005a9e' }};
    transform: translateY(-2px);
  }

  .featured-products-{{ unique }}__button:focus {
    outline: 2px solid {{ section.settings.focus_color | default: '#007cba' }};
    outline-offset: 2px;
  }

  /* Tablet breakpoint */
  @media screen and (min-width: 750px) {
    .featured-products-{{ unique }}__grid {
      grid-template-columns: repeat({{ columns_tablet }}, 1fr);
    }

    .featured-products-{{ unique }}__container {
      padding: 0 24px;
    }
  }

  /* Desktop breakpoint */
  @media screen and (min-width: 990px) {
    .featured-products-{{ unique }}__grid {
      grid-template-columns: repeat({{ columns_desktop }}, 1fr);
    }

    .featured-products-{{ unique }}__container {
      padding: 0 32px;
    }
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .featured-products-{{ unique }} {
      padding: {{ section.settings.padding_top_mobile | default: 40 }}px 0 {{ section.settings.padding_bottom_mobile | default: 40 }}px;
    }

    .featured-products-{{ unique }}__container {
      padding: 0 16px;
    }

    .featured-products-{{ unique }}__title {
      font-size: {{ section.settings.title_size_mobile | default: 28 }}px;
    }

    .featured-products-{{ unique }}__description {
      font-size: {{ section.settings.description_size_mobile | default: 16 }}px;
    }

    .featured-products-{{ unique }}__grid {
      gap: {{ section.settings.grid_gap_mobile | default: 20 }}px;
    }

    .featured-products-{{ unique }}__header {
      margin-bottom: {{ section.settings.header_margin_mobile | default: 30 }}px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .featured-products-{{ unique }}__product {
      transition: none;
    }

    .featured-products-{{ unique }}__product:hover {
      transform: none;
    }

    .featured-products-{{ unique }}__product-image img {
      transition: none;
    }

    .featured-products-{{ unique }}__product:hover .featured-products-{{ unique }}__product-image img {
      transform: none;
    }

    .featured-products-{{ unique }}__button {
      transition: none;
    }

    .featured-products-{{ unique }}__button:hover {
      transform: none;
    }
  }
{% endstyle %}

{%- comment -%} HTML Structure {%- endcomment -%}
<section
  class="featured-products-{{ unique }}"
  aria-labelledby="featured-products-heading-{{ unique }}"
>
  <div class="featured-products-{{ unique }}__container">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="featured-products-{{ unique }}__header">
        {%- if section.settings.title != blank -%}
          <h2 class="featured-products-{{ unique }}__title" id="featured-products-heading-{{ unique }}">
            {{ section.settings.title | escape }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="featured-products-{{ unique }}__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if featured_products.size > 0 -%}
      <div class="featured-products-{{ unique }}__grid">
        {%- for product in featured_products -%}
          <article class="featured-products-{{ unique }}__product">
            {%- if product.featured_image -%}
              <div class="featured-products-{{ unique }}__product-image">
                {% render 'responsive-image',
                   image: product.featured_image,
                   alt: product.title,
                   sizes: '(min-width: 990px) 300px, (min-width: 750px) 350px, 100vw',
                   loading: 'lazy',
                   max_width: 600 %}
              </div>
            {%- endif -%}

            <div class="featured-products-{{ unique }}__product-info">
              <h3 class="featured-products-{{ unique }}__product-title">
                <a href="{{ product.url }}">
                  {{ product.title | escape }}
                </a>
              </h3>

              <div class="featured-products-{{ unique }}__product-price">
                {% render 'price-display',
                   product: product,
                   show_compare_at: section.settings.show_compare_price,
                   class: 'featured-products-price' %}
              </div>
            </div>
          </article>
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all and section.settings.button_text != blank -%}
        <div class="featured-products-{{ unique }}__view-all">
          <a
            href="{{ collection.url | default: '/collections/all' }}"
            class="featured-products-{{ unique }}__button"
          >
            {{ section.settings.button_text | escape }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="featured-products-{{ unique }}__empty">
        <p>{{ 'sections.featured_products.empty' | t }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

