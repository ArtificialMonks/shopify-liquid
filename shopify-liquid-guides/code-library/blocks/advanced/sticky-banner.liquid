{%- comment -%}
  Sticky Banner Block - Advanced Theme Block

  Persistent announcement bar that sticks to top or bottom of viewport.
  Perfect for promotions, announcements, and important notices.

  Usage: Add this block to any section that accepts @theme blocks
  Copy to: /blocks/sticky-banner.liquid in your theme
{%- endcomment -%}

{%- liquid
  # Generate unique ID for CSS scoping
  assign unique = block.id | replace: '_', '' | downcase

  # Content settings
  assign message = block.settings.message | default: 'Free shipping on orders over $50!'
  assign button_text = block.settings.button_text
  assign button_link = block.settings.button_link
  assign show_icon = block.settings.show_icon | default: true
  assign icon_type = block.settings.icon_type | default: 'announcement'

  # Position and behavior
  assign position = block.settings.position | default: 'top'
  assign dismissible = block.settings.dismissible | default: true
  assign auto_hide = block.settings.auto_hide | default: false
  assign auto_hide_delay = block.settings.auto_hide_delay | default: 10

  # Style settings
  assign background_color = block.settings.background_color | default: '#1a1a1a'
  assign text_color = block.settings.text_color | default: '#ffffff'
  assign button_color = block.settings.button_color | default: '#ffffff'
  assign button_bg_color = block.settings.button_bg_color | default: '#ff6b35'
  assign height = block.settings.height | default: 'compact'

  # Animation settings
  assign slide_in = block.settings.slide_in | default: true
  assign slide_direction = block.settings.slide_direction | default: 'down'
-%}

{%- comment -%} CSS Scoping and Styles {%- endcomment -%}
{% style %}
  .sticky-banner-{{ unique }} {
    position: fixed;
    {% if position == 'top' %}
      top: 0;
    {% else %}
      bottom: 0;
    {% endif %}
    left: 0;
    right: 0;
    background: {{ background_color }};
    color: {{ text_color }};
    z-index: 1000;
    {% case height %}
      {% when 'compact' %}
        padding: 12px 20px;
      {% when 'medium' %}
        padding: 16px 20px;
      {% when 'large' %}
        padding: 20px 20px;
    {% endcase %}
    box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    transform: translateY({% if position == 'top' %}-100%{% else %}100%{% endif %});
    transition: transform 0.3s ease-in-out;
  }

  .sticky-banner-{{ unique }}.is-visible {
    transform: translateY(0);
  }

  {% if slide_in %}
    .sticky-banner-{{ unique }}.slide-in {
      animation: slideIn{{ slide_direction | capitalize }}-{{ unique }} 0.5s ease-out forwards;
    }

    @keyframes slideInDown-{{ unique }} {
      from { transform: translateY(-100%); }
      to { transform: translateY(0); }
    }

    @keyframes slideInUp-{{ unique }} {
      from { transform: translateY(100%); }
      to { transform: translateY(0); }
    }

    @keyframes slideInLeft-{{ unique }} {
      from { transform: translateX(-100%); }
      to { transform: translateX(0); }
    }

    @keyframes slideInRight-{{ unique }} {
      from { transform: translateX(100%); }
      to { transform: translateX(0); }
    }
  {% endif %}

  .sticky-banner-{{ unique }}__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .sticky-banner-{{ unique }}__icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
    flex-shrink: 0;
  }

  .sticky-banner-{{ unique }}__message {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.4;
    text-align: center;
    margin: 0;
  }

  .sticky-banner-{{ unique }}__button {
    background: {{ button_bg_color }};
    color: {{ button_color }};
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    min-height: 44px;
  }

  .sticky-banner-{{ unique }}__button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    opacity: 0.9;
  }

  .sticky-banner-{{ unique }}__button:focus {
    outline: 2px solid {{ text_color }};
    outline-offset: 2px;
  }

  .sticky-banner-{{ unique }}__close {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: {{ text_color }};
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    font-size: 18px;
    line-height: 1;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    min-height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sticky-banner-{{ unique }}__close:hover {
    opacity: 1;
    background: rgba(255,255,255,0.1);
  }

  .sticky-banner-{{ unique }}__close:focus {
    outline: 2px solid {{ text_color }};
    outline-offset: 2px;
    opacity: 1;
  }

  .sticky-banner-{{ unique }}__close-icon {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .sticky-banner-{{ unique }} {
      padding: 10px 16px;
    }

    .sticky-banner-{{ unique }}__content {
      gap: 8px;
      {% if dismissible %}
        padding-right: 60px;
      {% endif %}
    }

    .sticky-banner-{{ unique }}__message {
      font-size: 13px;
    }

    .sticky-banner-{{ unique }}__button {
      padding: 6px 12px;
      font-size: 12px;
    }

    .sticky-banner-{{ unique }}__close {
      right: 12px;
      padding: 6px;
    }

    .sticky-banner-{{ unique }}__icon {
      width: 18px;
      height: 18px;
    }
  }

  /* Very small screens - stack content */
  @media screen and (max-width: 480px) {
    .sticky-banner-{{ unique }}__content {
      flex-direction: column;
      gap: 8px;
      padding-right: 0;
    }

    .sticky-banner-{{ unique }}__close {
      top: 8px;
      right: 8px;
      transform: none;
    }
  }

  /* Hide banner when dismissed */
  .sticky-banner-{{ unique }}.is-hidden {
    transform: translateY({% if position == 'top' %}-100%{% else %}100%{% endif %});
    pointer-events: none;
  }
{% endstyle %}

{%- comment -%} HTML Structure {%- endcomment -%}
<div class="sticky-banner-{{ unique }}{% if slide_in %} slide-in{% endif %}"
     id="sticky-banner-{{ unique }}"
     data-position="{{ position }}"
     data-auto-hide="{{ auto_hide }}"
     data-auto-hide-delay="{{ auto_hide_delay }}"
     {{ block.shopify_attributes }}
     role="banner"
     aria-label="Announcement banner">

  <div class="sticky-banner-{{ unique }}__content">
    {%- if show_icon -%}
      <svg class="sticky-banner-{{ unique }}__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
