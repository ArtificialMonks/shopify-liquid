    {%- endif -%}
  </div>
</div>

{%- comment -%} JavaScript for banner functionality {%- endcomment -%}
<script>
  (function() {
    // Initialize banner
    function initStickyBanner() {
      const banner = document.getElementById('sticky-banner-{{ unique }}');
      if (!banner) return;

      const bannerKey = 'sticky-banner-{{ unique }}-dismissed';
      const isDismissed = localStorage.getItem(bannerKey);

      if (isDismissed) {
        banner.style.display = 'none';
        return;
      }

      // Show banner
      setTimeout(() => {
        banner.classList.add('is-visible');
      }, 100);

      // Auto-hide functionality
      const autoHide = banner.dataset.autoHide === 'true';
      const autoHideDelay = parseInt(banner.dataset.autoHideDelay) * 1000;

      if (autoHide && autoHideDelay > 0) {
        setTimeout(() => {
          dismissStickyBanner('{{ unique }}');
        }, autoHideDelay);
      }

      // Adjust body padding to prevent content overlap
      adjustBodyPadding();
    }

    // Dismiss banner function
    window.dismissStickyBanner = function(uniqueId) {
      const banner = document.getElementById(`sticky-banner-${uniqueId}`);
      if (!banner) return;

      banner.classList.add('is-hidden');

      // Store dismissal in localStorage
      const bannerKey = `sticky-banner-${uniqueId}-dismissed`;
      localStorage.setItem(bannerKey, 'true');

      // Reset body padding after animation
      setTimeout(() => {
        adjustBodyPadding();
      }, 300);
    };

    // Adjust body padding to prevent content overlap
    function adjustBodyPadding() {
      const banner = document.getElementById('sticky-banner-{{ unique }}');
      if (!banner) return;

      const isVisible = banner.classList.contains('is-visible') && !banner.classList.contains('is-hidden');
      const position = banner.dataset.position;
      const bannerHeight = isVisible ? banner.offsetHeight : 0;

      if (position === 'top') {
        document.body.style.paddingTop = bannerHeight + 'px';
      } else {
        document.body.style.paddingBottom = bannerHeight + 'px';
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initStickyBanner);
    } else {
      initStickyBanner();
    }

    // Handle window resize
    window.addEventListener('resize', adjustBodyPadding);
  })();
</script>

