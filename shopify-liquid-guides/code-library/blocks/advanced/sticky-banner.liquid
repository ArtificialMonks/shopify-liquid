        {%- endcase -%}
      </svg>
    {%- endif -%}

    <p class="sticky-banner-{{ unique }}__message">{{ message | escape }}</p>

    {%- if button_text != blank and button_link != blank -%}
      <a href="{{ button_link }}" class="sticky-banner-{{ unique }}__button">
        {{ button_text | escape }}
      </a>
    {%- endif -%}

    {%- if dismissible -%}
      <button type="button"
              class="sticky-banner-{{ unique }}__close"
              onclick="dismissStickyBanner('{{ unique }}')"
              aria-label="Close banner">
        <svg class="sticky-banner-{{ unique }}__close-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
