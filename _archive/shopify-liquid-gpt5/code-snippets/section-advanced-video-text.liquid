{% comment %}
  sections/advanced-video-text.liquid
  Production-ready, editor-aware section with flexible video + text placement.
  Instance-scoped via section.id (CSS vars + selectors) per our docs.
{% endcomment %}
{%- liquid
  assign sid = section.id | replace: '_', '' | downcase
  assign root = 'avt-' | append: sid
-%}
<section class="advanced-video-text {{ root }}"
  aria-label="{{ section.settings.aria_label | default: 'Video and text section' | escape }}"
  data-section-id="{{ section.id }}"
  data-animate="{{ section.settings.anim_enable | escape }}"
>
  <div class="{{ root }}__bg" aria-hidden="true"></div>
  <div class="{{ root }}__inner">
    <div class="{{ root }}__video-wrap" data-enhance="lazy-video">
      {%- liquid
        assign src_type = section.settings.video_source
      -%}
      {%- if src_type == 'youtube' and section.settings.video_youtube != blank -%}
        <div class="{{ root }}__embed is-youtube" data-embed="youtube" data-src="https://www.youtube.com/embed/{{ section.settings.video_youtube.id }}?rel=0&playsinline=1&controls={{ section.settings.video_controls | default: true | json }}&mute={{ section.settings.video_muted | json }}&loop={{ section.settings.video_loop | json }}&autoplay={{ section.settings.video_autoplay | json }}">
          {%- if section.settings.video_poster != blank -%}
            <img class="{{ root }}__poster" src="{{ section.settings.video_poster | image_url: width: 1440 }}" alt="" loading="lazy">
          {%- endif -%}
          <button type="button" class="{{ root }}__play" aria-label="{{ 'general.play' | t | default: 'Play video' }}">▶</button>
        </div>
      {%- elsif src_type == 'vimeo' and section.settings.video_vimeo_url != blank -%}
        <div class="{{ root }}__embed is-vimeo" data-embed="vimeo" data-src="https://player.vimeo.com/video/{{ section.settings.video_vimeo_url | split: '/' | last }}?muted={{ section.settings.video_muted | json }}&loop={{ section.settings.video_loop | json }}&autoplay={{ section.settings.video_autoplay | json }}">
          {%- if section.settings.video_poster != blank -%}
            <img class="{{ root }}__poster" src="{{ section.settings.video_poster | image_url: width: 1440 }}" alt="" loading="lazy">
          {%- endif -%}
          <button type="button" class="{{ root }}__play" aria-label="{{ 'general.play' | t | default: 'Play video' }}">▶</button>
        </div>
      {%- else -%}
        <video class="{{ root }}__video"
          {% if section.settings.video_controls %}controls{% endif %}
          {% if section.settings.video_muted %}muted{% endif %}
          {% if section.settings.video_loop %}loop{% endif %}
          {% if section.settings.video_playsinline %}playsinline{% endif %}
          preload="{% if section.settings.video_preload != blank %}{{ section.settings.video_preload }}{% else %}metadata{% endif %}"
          {% if section.settings.video_poster %}poster="{{ section.settings.video_poster | image_url: width: 1440 }}"{% endif %}
          aria-label="{{ section.settings.video_aria | escape }}"
        >
          {%- if section.settings.video_mp4_url != blank -%}
            <source src="{{ section.settings.video_mp4_url }}" type="video/mp4">
          {%- endif -%}
          {%- if section.settings.video_file != blank -%}
            <source src="{{ section.settings.video_file | file_url }}" type="video/mp4">
          {%- endif -%}
          {%- if section.settings.video_captions != blank -%}
            <track kind="captions" src="{{ section.settings.video_captions | file_url }}" srclang="en" label="English">
          {%- endif -%}
        </video>
      {%- endif -%}
    </div>

    {%- if section.settings.header_text != blank -%}
    <header class="{{ root }}__header">
      <h2 class="{{ root }}__heading">{{ section.settings.header_text }}</h2>
    </header>
    {%- endif -%}

    {%- if section.settings.body_richtext != blank -%}
    <div class="{{ root }}__body rte">
      {{ section.settings.body_richtext }}
      {%- if section.settings.readmore_enable -%}
      <button class="{{ root }}__readmore" data-enhance="accordion" aria-expanded="false" aria-controls="rm-{{ sid }}">{{ section.settings.readmore_label | default: 'Read more' | escape }}</button>
      <div id="rm-{{ sid }}" class="{{ root }}__more" hidden>{{ section.settings.readmore_content }}</div>
      {%- endif -%}
    </div>
    {%- endif -%}
  </div>
</section>

<style>
/* Instance-scoped styles */
.advanced-video-text.{{ root }} {
  /* container */
  --avt-max-w: {{ section.settings.max_width | default: 1200 }}px;
  --avt-pad-t: {{ section.settings.pad_top | default: 40 }}px;
  --avt-pad-r: {{ section.settings.pad_right | default: 20 }}px;
  --avt-pad-b: {{ section.settings.pad_bottom | default: 40 }}px;
  --avt-pad-l: {{ section.settings.pad_left | default: 20 }}px;
  /* background */
  --bg-color: {{ section.settings.bg_color | default: 'transparent' }};
  --bg-grad-angle: {{ section.settings.bg_grad_angle | default: 90 }}deg;
  --bg-grad-c1: {{ section.settings.bg_grad_c1 | default: 'transparent' }};
  --bg-grad-c2: {{ section.settings.bg_grad_c2 | default: 'transparent' }};
  --bg-opacity: {{ section.settings.bg_opacity | default: 1 }};
  --bg-blend: {{ section.settings.bg_blend | default: 'normal' }};
  --bg-size: {{ section.settings.bg_size | default: 'cover' }};
  --bg-pos: {{ section.settings.bg_position | default: 'center center' }};
  --bg-repeat: {{ section.settings.bg_repeat | default: 'no-repeat' }};
  --bg-attach: {{ section.settings.bg_attachment | default: 'scroll' }};
  /* video box */
  --v-ratio: {{ section.settings.aspect_ratio | default: '16/9' }};
  --v-w: {{ section.settings.video_width | default: 100 }}%;
  --v-h: {{ section.settings.video_height | default: 0 }};
  --v-align: {{ section.settings.video_align | default: 'center' }};
  --v-ox: {{ section.settings.video_offset_x | default: 0 }}{{ section.settings.video_offset_unit | default: 'px' }};
  --v-oy: {{ section.settings.video_offset_y | default: 0 }}{{ section.settings.video_offset_unit | default: 'px' }};
  --v-rot: {{ section.settings.video_rotate | default: 0 }}deg;
  --v-shadow: {{ section.settings.video_shadow_x | default: 0 }}px {{ section.settings.video_shadow_y | default: 10 }}px {{ section.settings.video_shadow_blur | default: 30 }}px {{ section.settings.video_shadow_spread | default: 0 }}px {{ section.settings.video_shadow_color | default: 'rgba(0,0,0,.2)' }};
  --v-radius: {{ section.settings.radius_tl | default: 12 }}px {{ section.settings.radius_tr | default: 12 }}px {{ section.settings.radius_br | default: 12 }}px {{ section.settings.radius_bl | default: 12 }}px;
  --v-opacity: {{ section.settings.video_opacity | default: 1 }};
  /* heading */
  --h-color: {{ section.settings.header_color | default: 'inherit' }};
  --h-fs: {{ section.settings.header_size | default: 36 }}{{ section.settings.header_size_unit | default: 'px' }};
  --h-fw: {{ section.settings.header_weight | default: 700 }};
  --h-lh: {{ section.settings.header_line_height | default: 1.2 }};
  --h-ls: {{ section.settings.header_letter | default: 0 }}em;
  --h-align: {{ section.settings.header_align | default: 'left' }};
  --h-max: {{ section.settings.header_max | default: 800 }}px;
  /* body */
  --b-color: {{ section.settings.body_color | default: 'inherit' }};
  --b-fs: {{ section.settings.body_size | default: 16 }}{{ section.settings.body_size_unit | default: 'px' }};
  --b-lh: {{ section.settings.body_line_height | default: 1.6 }};
  --b-cols: {{ section.settings.body_columns | default: 1 }};
  --gap: {{ section.settings.gap | default: 24 }}px;
}
.advanced-video-text.{{ root }} { padding: var(--avt-pad-t) var(--avt-pad-r) var(--avt-pad-b) var(--avt-pad-l); }
.advanced-video-text.{{ root }} .{{ root }}__inner {
  margin-inline: auto; max-width: var(--avt-max-w);
  display: grid;
  gap: var(--gap);
  grid-template-columns: 1fr 1fr;
  grid-template-areas: 'video header' 'video body';
  align-items: start;
}
/* layout variations */
{%- case section.settings.layout -%}
{%- when 'video_left' -%}
.advanced-video-text.{{ root }} .{{ root }}__video-wrap{ grid-area: video; }
.advanced-video-text.{{ root }} .{{ root }}__header{ grid-area: header; }
.advanced-video-text.{{ root }} .{{ root }}__body{ grid-area: body; }
{%- when 'video_right' -%}
.advanced-video-text.{{ root }} .{{ root }}__inner{ grid-template-areas: 'header video' 'body video'; }
.advanced-video-text.{{ root }} .{{ root }}__video-wrap{ grid-area: video; }
.advanced-video-text.{{ root }} .{{ root }}__header{ grid-area: header; }
.advanced-video-text.{{ root }} .{{ root }}__body{ grid-area: body; }
{%- when 'overlay' -%}
.advanced-video-text.{{ root }} .{{ root }}__inner{ grid-template-columns: 1fr; grid-template-areas: 'video'; }
.advanced-video-text.{{ root }} .{{ root }}__video-wrap{ grid-area: video; position: relative; }
.advanced-video-text.{{ root }} .{{ root }}__header{ position: absolute; inset: auto auto 50% 50%; transform: translate(-50%, 50%); }
.advanced-video-text.{{ root }} .{{ root }}__body{ position: absolute; inset: auto auto 10% 50%; transform: translateX(-50%); }
{%- endcase -%}

/* background */
.advanced-video-text.{{ root }} .{{ root }}__bg{
  position: absolute; inset: 0; z-index: 0; pointer-events: none;
  background-color: var(--bg-color);
  mix-blend-mode: var(--bg-blend);
  opacity: var(--bg-opacity);
  {%- if section.settings.bg_image != blank -%}
  background-image:
    {%- if section.settings.bg_gradient -%}
      linear-gradient(var(--bg-grad-angle), var(--bg-grad-c1), var(--bg-grad-c2)),
    {%- endif -%}
    url('{{ section.settings.bg_image | image_url: width: 2000 }}');
  background-size: var(--bg-size);
  background-position: var(--bg-pos);
  background-repeat: var(--bg-repeat);
  background-attachment: var(--bg-attach);
  {%- elsif section.settings.bg_gradient -%}
  background-image: linear-gradient(var(--bg-grad-angle), var(--bg-grad-c1), var(--bg-grad-c2));
  {%- endif -%}
}
.advanced-video-text.{{ root }} .{{ root }}__inner{ position: relative; z-index: 1; }

/* video */
.advanced-video-text.{{ root }} .{{ root }}__video-wrap{
  width: var(--v-w); filter: opacity(var(--v-opacity));
}
.advanced-video-text.{{ root }} .{{ root }}__video,
.advanced-video-text.{{ root }} .{{ root }}__embed{ display:block; width:100%; aspect-ratio: var(--v-ratio); border-radius: var(--v-radius); box-shadow: var(--v-shadow); transform: translate(var(--v-ox), var(--v-oy)) rotate(var(--v-rot)); object-fit: cover; }
.advanced-video-text.{{ root }} .{{ root }}__poster{ display:block; width:100%; aspect-ratio: var(--v-ratio); object-fit: cover; border-radius: var(--v-radius); }
.advanced-video-text.{{ root }} .{{ root }}__play{ position:absolute; inset:auto auto 10% 10%; z-index:2; }

/* heading */
.advanced-video-text.{{ root }} .{{ root }}__heading{ color: var(--h-color); font-size: var(--h-fs); font-weight: var(--h-fw); line-height: var(--h-lh); letter-spacing: var(--h-ls); text-align: var(--h-align); max-width: var(--h-max); margin: 0; }

/* body */
.advanced-video-text.{{ root }} .{{ root }}__body{ color: var(--b-color); font-size: var(--b-fs); line-height: var(--b-lh); column-count: var(--b-cols); }
.advanced-video-text.{{ root }} .{{ root }}__more[hidden]{ display:none; }

/* responsive */
@media (max-width: 768px){
  .advanced-video-text.{{ root }} .{{ root }}__inner{ grid-template-columns: 1fr; grid-template-areas: 'video' 'header' 'body'; }
  .advanced-video-text.{{ root }} .{{ root }}__heading{ font-size: {{ section.settings.header_size_mobile | default: 28 }}{{ section.settings.header_size_unit | default: 'px' }}; }
  .advanced-video-text.{{ root }} .{{ root }}__body{ font-size: {{ section.settings.body_size_mobile | default: 15 }}{{ section.settings.body_size_unit | default: 'px' }}; }
}

/* animations (progressive) */
{%- if section.settings.anim_enable -%}
.advanced-video-text.{{ root }} [data-anim]{ opacity:0; transform: translateY(10px); transition: all {{ section.settings.anim_duration | default: 600 }}ms {{ section.settings.anim_ease | default: 'ease' }}; }
.advanced-video-text.{{ root }} [data-anim].in{ opacity:1; transform:none; }
{%- endif -%}
</style>

<script>
(function(){
  const root = document.querySelector('.advanced-video-text.{{ root }}');
  if(!root) return;
  // Lazy embed for YouTube/Vimeo
  root.querySelectorAll('.{{ root }}__embed').forEach((wrap)=>{
    const btn = wrap.querySelector('.{{ root }}__play');
    const poster = wrap.querySelector('.{{ root }}__poster');
    const load = () => {
      if (wrap.dataset.loaded) return;
      const src = wrap.getAttribute('data-src');
      if (!src) return;
      const iframe = document.createElement('iframe');
      iframe.src = src; iframe.setAttribute('allow','autoplay; encrypted-media; picture-in-picture;'); iframe.setAttribute('allowfullscreen',''); iframe.style.width = '100%'; iframe.style.height = '100%';
      wrap.innerHTML = ''; wrap.appendChild(iframe); wrap.dataset.loaded = '1';
    };
    btn && btn.addEventListener('click', load, { once: true });
    if ('IntersectionObserver' in window){
      const io = new IntersectionObserver((es)=>{ es.forEach(e=>{ if(e.isIntersecting && {{ section.settings.video_autoplay | json }}) load(); }); },{ rootMargin:'100px' });
      io.observe(wrap);
    }
  });
  // Read more toggle
  const rmBtn = root.querySelector('.{{ root }}__readmore');
  const rmPanel = root.querySelector('#rm-{{ sid }}');
  if(rmBtn && rmPanel){
    rmBtn.addEventListener('click', ()=>{
      const ex = rmBtn.getAttribute('aria-expanded')==='true';
      rmBtn.setAttribute('aria-expanded', String(!ex));
      rmPanel.hidden = ex;
      if (!ex && {{ section.settings.readmore_less_label | json }}) rmBtn.textContent = {{ section.settings.readmore_less_label | json }};
      else rmBtn.textContent = {{ section.settings.readmore_label | json }};
    });
  }
  // Section animations
  if ({{ section.settings.anim_enable | json }}){
    const m = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)');
    if (!m || !m.matches){
      const els = root.querySelectorAll('[data-anim]');
      if ('IntersectionObserver' in window){
        const io = new IntersectionObserver((es)=>{ es.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('in'); io.unobserve(e.target); } }); }, { rootMargin: '0px 0px -10% 0px' });
        els.forEach(el=>io.observe(el));
      } else { els.forEach(el=>el.classList.add('in')); }
    }
  }
})();
</script>

