{%- comment -%} Paste inside a section's block loop {%- endcomment -%}
{%- assign u = block.id | replace: '_', '' | downcase -%}

<style>
  .feature-{{ u }}{text-align:center;padding:{{ block.settings.pad }}px;background:{{ block.settings.bg }}}
  .feature__icon-{{ u }} img{width:{{ block.settings.icon_size }}px;height:{{ block.settings.icon_size }}px}
  .feature__title-{{ u }}{margin:8px 0;color:{{ block.settings.title_color }}}
  .feature__text-{{ u }}{color:{{ block.settings.text_color }}}
</style>

<div class="feature-{{ u }}" {{ block.shopify_attributes }}>
  <div class="feature__icon-{{ u }}">{% if block.settings.icon %}<img src="{{ block.settings.icon | image_url: width: 200 }}" alt="">{% endif %}</div>
  <h3 class="feature__title-{{ u }}">{{ block.settings.title | escape }}</h3>
  <div class="feature__text-{{ u }}">{{ block.settings.text }}</div>
  {% if block.settings.url and block.settings.cta %}
    <a class="btn btn--primary feature__cta-{{ u }}" href="{{ block.settings.url }}">{{ block.settings.cta | escape }}</a>
  {% endif %}
</div>

{%- comment -%} Block schema (add under section schema -> blocks[])
{"type":"feature","name":"Feature","settings":[
{"type":"image_picker","id":"icon","label":"Icon"},
{"type":"text","id":"title","label":"Title","default":"Feature"},
{"type":"richtext","id":"text","label":"Text"},
{"type":"text","id":"cta","label":"CTA label"},
{"type":"url","id":"url","label":"Link"},
{"type":"color","id":"title_color","label":"Title color","default":"#111111"},
{"type":"color","id":"text_color","label":"Text color","default":"#333333"},
{"type":"color","id":"bg","label":"Background","default":"#ffffff"},
{"type":"range","id":"icon_size","label":"Icon size","min":24,"max":128,"step":4,"unit":"px","default":48},
{"type":"range","id":"pad","label":"Padding","min":0,"max":80,"step":4,"unit":"px","default":24}
]}
{%- endcomment -%}

