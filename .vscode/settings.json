{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "Shopify.theme-check-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  "liquid.format.enable": true,
  "liquid.completion.enable": true,
  "liquid.hover.enable": true,
  "liquid.links.enable": true,
  "liquid.validation.enable": true,

  "themeCheck.checkOnSave": true,
  "themeCheck.checkOnOpen": true,
  "themeCheck.onlySingleFileChecks": false,

  "files.associations": {
    "*.liquid": "liquid"
  },

  "emmet.includeLanguages": {
    "liquid": "html"
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/_archive": true,
    "**/.claude": false
  },

  "files.watcherExclude": {
    "**/node_modules": true,
    "**/_archive": true,
    "**/.git": true
  },

  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.preview.autoShowPreviewToSide": true,
  "markdown.extension.list.indentationSize": "adaptive",

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.md": "${capture}.json,${capture}.liquid,${capture}.css",
    "README.md": "STRUCTURE.md,INSTRUCTIONS.md,CLAUDE.md",
    "*.liquid": "${capture}.css,${capture}.js"
  },

  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Shopify.theme-check-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.snippetSuggestions": "top",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 2
  },

  "[json]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,

  "breadcrumbs.enabled": true,
  "breadcrumbs.showKeys": true,
  "breadcrumbs.showFiles": true,

  "shopify.theme-check.enableCompletionProvider": true,
  "shopify.theme-check.enableHoverProvider": true,
  "shopify.theme-check.enableDefinitionProvider": true,

  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,

  // Ultimate Shopify Liquid Validation Automation
  "shopify.theme-check.enableValidationAutomation": true,
  "shopify.theme-check.validationWorkflows": {
    "development": "./scripts/validate-theme.sh development",
    "ultimate": "./scripts/validate-theme.sh ultimate",
    "deep": "./scripts/validate-theme.sh deep",
    "comprehensive": "./scripts/validate-theme.sh comprehensive",
    "production": "./scripts/validate-theme.sh production",
    "autoFix": "./scripts/validate-theme.sh auto-fix",
    "all": "./scripts/validate-theme.sh all"
  },

  // Terminal shortcuts for validation commands
  "terminal.integrated.commandsToSkipShell": [
    "shopify.validateDevelopment",
    "shopify.validateUltimate",
    "shopify.validateDeep",
    "shopify.validateProduction",
    "shopify.validateAll"
  ]
}